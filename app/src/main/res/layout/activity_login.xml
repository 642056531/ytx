<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
<!--    <include layout="@layout/activity_title"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_80"
            android:text="ERP移动管理平台"
            android:textColor="@color/color_2c92f9"
            android:textSize="@dimen/margin_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:text="用户名密码登录"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/margin_24" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_28"
            android:background="@drawable/bg_adafb3_5"
            android:hint="请输入用户名"
            android:lines="1"
            android:maxLength="12"
            android:paddingLeft="@dimen/margin_5"
            android:text=""
            android:textSize="@dimen/textSize_14" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_28"
            android:background="@drawable/bg_adafb3_5"
            android:hint="请输入密码"
            android:lines="1"
            android:maxLength="12"
            android:paddingLeft="@dimen/margin_5"
            android:text=""
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_28"
            android:background="@drawable/bg_2c92f9_8"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_28">

            <TextView
                android:id="@+id/code_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="短信验证码登录"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="忘记密码?"
                android:textColor="@color/color_adafb3" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_50"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_wechat"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:background="@mipmap/icon_share_wechat" />

        <LinearLayout
            android:id="@+id/ll_login_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_22"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_login_user_agreement"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_5"
                android:src="@mipmap/icon_login_agree_unselect" />

            <TextView
                android:id="@+id/iv_login_agreement_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read"
                android:textColor="@color/color_595959"
                android:textSize="@dimen/textSize_10" />

            <TextView
                android:id="@+id/tv_login_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement"
                android:textColor="@color/color_5c8ff5"
                android:textSize="@dimen/textSize_10" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>